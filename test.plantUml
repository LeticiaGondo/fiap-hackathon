@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

title Hackathon - Validação Inteligente de Requisitos Documentais (API)

Person(medico, "Médico/Atendente", "Preenche pedido")
System_Ext(legado, "Sistema Legado SUS", "Cria pedidos e chama a API para validação")

System_Boundary(apiBoundary, "Validação Documental API") {
  Container(api, "Validation API", "Spring Boot REST", "Gera checklist de requisitos e resultado (LIBERADO/PENDENTE)")
  ContainerDb(db, "Banco da API", "PostgreSQL", "Catálogo de procedimentos, regras, aplicações por contexto e auditoria")
}

Rel(medico, legado, "Cria/atualiza pedido")
Rel(legado, api, "POST /validacoes/pedidos/{id}/checklist", "JSON (pedido + contexto)")
Rel(api, db, "Lê/Escreve regras e auditoria", "JPA/SQL")
Rel_Back(api, legado, "Checklist + resultado", "JSON")

@enduml