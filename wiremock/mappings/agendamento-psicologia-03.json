{
  "request": {
    "method": "POST",
    "urlPath": "/api/agendamentos",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.especialidade == 'PSICOLOGIA')]"
      }
    ]
  },
  "scenarioName": "AGENDAMENTO-PSICOLOGIA",
  "requiredScenarioState": "PSICOLOGIA-3",
  "newScenarioState": "PSICOLOGIA-4",
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": [
      "response-template"
    ],
    "jsonBody": {
      "protocolo": "{{jsonPath request.body '$.protocolo'}}",
      "status": "AGENDADO",
      "dataHora": "{{now offset='2 days' format='yyyy-MM-dd'}}T09:30:00",
      "unidade": {
        "id": "UBS-021",
        "nome": "UBS Serra",
        "endereco": "Av. Brasil, 1200"
      }
    }
  }
}
