{
  "request": {
    "method": "POST",
    "urlPath": "/api/agendamentos",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.especialidade == 'NEUROLOGIA')]"
      }
    ]
  },
  "scenarioName": "AGENDAMENTO-NEUROLOGIA",
  "requiredScenarioState": "NEUROLOGIA-2",
  "newScenarioState": "NEUROLOGIA-3",
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": [
      "response-template"
    ],
    "jsonBody": {
      "protocolo": "{{jsonPath request.body '$.protocolo'}}",
      "status": "AGENDADO",
      "dataHora": "{{now offset='2 days' format='yyyy-MM-dd'}}T09:30:00",
      "unidade": {
        "id": "UBS-001",
        "nome": "UBS Central",
        "endereco": "Rua das Flores, 100"
      }
    }
  }
}